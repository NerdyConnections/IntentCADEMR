@using IntentCADEMR.Util
@model IntentCADEMR.Models.ForgotPasswordModel
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_LoginMaster.cshtml";
}


@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @id = "frmForgotPassword" }))
{
    <div class="row" style="padding-bottom:100px; padding-top: 75px; font-size:24px; background-color:#eeeeee">
        <div class="col-sm-12" style="padding:30px 100px 0px 100px">
            <div class="row">

                <h1>Forgot your password?</h1>
              
            </div>
        </div>
        <div class="col-sm-12" style="background-color:#D9E1E3; padding:30px 100px 0px 100px">
            <div class="lead1">Please enter your username (email address): </div>
            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control ctrl-login" })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
          
        </div>
        <div class="col-sm-12" style="background-color:#D9E1E3 ;padding:30px 100px 20px 100px; text-align:left;">
          
            <button id="btnSubmit" type="button" class="btn btn-primary btn-lg" style="width:200px">Submit</button>
              <div id="msg" class="text-danger"/>
        </div>
      
    </div>
  
}

<script>
    var isHttpPost = '@ViewBag.IsHttpPost';
    var isSuccessful = '@ViewBag.IsSuccessful';
    if (isHttpPost.toLowerCase() == "true") {
        if (isSuccessful.toLowerCase() == "true") {
            $("#msg").html("Your password has been emailed. Please check your inbox. If you experience any difficulties retrieving your password, <a href='mailto:info@intent-cademr.com'>please contact us HERE</a>");
        } else {
            $("#msg").html("<span class='text-danger'>Your email does not exist</span>");
        }
    }
    $(document).ready(function () {

        $('#btnSubmit').on('click', function (e) {
            $('#frmForgotPassword').submit();
        });
      
    });

</script>

