@using IntentCADEMR.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginMaster.cshtml";
}
@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form",@id="frmLogin" }))
{
    @Html.AntiForgeryToken()
    <div class="row" style="padding-bottom:100px; padding-top: 75px; font-size:24px; background-color:#eeeeee">

        <div class="col-sm-5 col-sm-offset-1">
            <div class="row">
                <div class="col-sm-12">
                    <img class="img-responsive" src="/img/login_banner_img.png" width="600" height="150">
                </div>
                <div class="col-sm-12" style="background-color:#D9E1E3; text-align:center; padding:10px 0px 10px 0px">
                    <h1 class="blue">
                        LOGIN
                    </h1>
                </div>

                <div class="col-sm-12" style="background-color:#D9E1E3; padding:0px 100px 0px 100px">
                    <label class="control-label">Username: </label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control ctrl-login", @id = "ctrlEmail", @placeholder = "" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "errorMssg" })
                </div>

                <div class="col-sm-12" style="background-color:#D9E1E3; padding:30px 100px 0px 100px">
                    <label class="control-label">Password: </label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control ctrl-login", @id = "ctrlPassword", @placeholder = "" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "errorMssg" })
                    <span style="font-size: 18px"><em><a data-toggle="modal" href="/Account/ForgotPassword">Forgot your password?</a></em></span>
                </div>
            </div>

            <div class="col-sm-12" style="background-color:#D9E1E3; text-align:center; padding:30px 0px 50px 0px">
                <button id="btnLogin" type="button" class="btn btn-primary btn-lg" style="width:200px">LOGIN</button>
            </div>
        </div>


        <!--New REG -->

        <div class="col-sm-4 col-sm-offset-1">
            <div class="row">

                <div class="col-sm-12 hidden-xs" style="text-align:center; padding:115px 0px 10px 0px">
                    <h1 class="blue">
                        New Registration
                    </h1>
                </div>

                <div class="col-sm-12 visible-xs" style="text-align:center; padding:20px 0px 10px 0px">
                    <h1 class="blue">
                        New Registration
                    </h1>
                </div>

                <div class="col-sm-12" style="padding:0px 10px 0px 10px">

                    <h4>
                        <strong>
                            IMPORTANT:
                        </strong><br>
                        The INTENT-CAD EMR program has been designed for the QHR Technologies’ Accuro EMR Platform ONLY. By registering to participate, you acknowledge that you are:
                        <ul>
                            <li>Currently utilizing the Accuro EMR platform;</li>
                        </ul>
                        <ul>
                            <li> Have full user rights to participate in quality improvement programs;</li>
                        </ul>
                        <ul>
                            <li>Manage a minimum of 30 patients meeting the eligibility criteria (CAD) and;</li>
                        </ul>
                        <ul>
                            <li>
                                Understand that these terms are a prerequisite for participating in the INTENT-CAD EMR program and registering on this site.
                            </li>
                        </ul>
                    </h4>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-5" style="text-align:center; padding:30px 0px 0px 0px">
                    <button type="button" id="btnRegister" class="btn btn-primary btn-lg" style="width:200px">Register</button>
                </div>
                <div class="col-sm-5 col-sm-offset-1" style="text-align:center; padding:30px 0px 0px 0px">
                    <button type="button" class="btn btn-default btn-lg" data-toggle="modal" data-target="#notInt" style="width:200px">Not Interested</button>
                </div>
            </div>
        </div>



       
        


     
        
     

    </div>
}

<script>



    $(document).ready(function () {

        $('#btnLogin').on('click', function (e) {
            $('#frmLogin').submit();
        });
        $('#btnRegister').on('click', function (e) {
            console.log('register');
            location.href = '/Account/Register';
        });
    });
   
       
</script>